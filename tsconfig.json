{
   "compilerOptions": {
      "lib": [
         "es5",
         "es6"
      ],
      "target": "es2017",
      "module": "commonjs",
      "moduleResolution": "node",
      "rootDir": "./src",
      "outDir": "./dist", 
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "strict": true, 
      "esModuleInterop": true, 
      "skipLibCheck": true,
      "typeRoots": [
         "./node_modules/@types", 
         "./src/types/*"
      ]
   }
}